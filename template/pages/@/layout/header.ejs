                        if (itemMenu && itemMenu.icon) {
                        %> 
                        <li class="col-auto ml-auto d-none d-md-block">
                          <img
                            src="<%= itemMenu.icon.url %>"
                            alt="<%= itemMenu.icon.alt || itemMenu.name %>"
                          >
                        </li>
                      <% } %>  
                    </ul>
                  <% } %>
                </li>
              <% }) %>
            </ul>
          </nav>
        </div>
      <% } %>
